doctype html
html(lang="ja")
  include partial/head

  body
    include partial/global-header

    .content

      section.post
        footer
          p= post.author.name
          time(datetime= toIsoTime(post.date))= toDisplayDate(post.date, dateFormat)

        h1= post.title
        div!= post.content

        ul
          if (post.next)
            li
              a(href= urlFor(post.next.link))= post.next.title
          if (post.prev)
            li
              a(href= urlFor(post.prev.link))= post.prev.title

    include partial/global-footer
