doctype html
html(lang="ja")
  include partial/head

  body
    h1= title
    p= description

    each post in posts.slice(0, 2)
      hr

      section
        footer
          p= getAuthor(post.author).name
          time(datetime= getDateTime(post.date))= getDisplayDate(post.date, dateFormat)
        h1= post.title
        div!= post.excerpt
        a(href= urlFor(post.link)) link

    p
      a(href= urlFor('/posts/')) archive
