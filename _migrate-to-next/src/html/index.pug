doctype html
html(lang="ja")
  include partial/head

  body
    include partial/global-header

    .content

      each post in posts.slice(0, postCountInHome)

        section.post
          footer
            p= post.author.name
            time(datetime= toIsoTime(post.date))= toDisplayDate(post.date, dateFormat)
          h1= post.title
          div!= post.excerpt
          a(href= urlFor(post.link)) link

      p
        a(href= urlFor('/posts/')) archive

    include partial/global-footer
