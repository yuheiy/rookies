doctype html
html(lang="ja")
  include partial/head

  body
    h1= title
    p= description

    each post in posts.slice(0, postCountInHome)
      hr

      section
        footer
          p= post.author.name
          time(datetime= toIsoTime(post.date))= toDisplayDate(post.date, dateFormat)
        h1= post.title
        div!= post.excerpt
        a(href= urlFor(post.link)) link

    p
      a(href= urlFor('/posts/')) archive
