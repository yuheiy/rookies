doctype html
html(lang="ja")
  include partial/head

  body
    h1
      a(href= urlFor('/'))= title
    p= description

    each post in posts
      hr

      section
        footer
          p= post.author.name
          time(datetime= toIsoTime(post.date))= toDisplayDate(post.date, dateFormat)

        h1= post.title
        div!= post.excerpt
        a(href= urlFor(post.link)) link
