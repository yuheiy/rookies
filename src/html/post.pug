//- mixin
include partial/post-section

doctype html
html(lang="ja")
  include partial/head

  body
    include partial/global-header

    main.content
      +post-section(post, true)

      aside.social
        ul
          li
            a.social__twitter(href= `https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(`${url}${currentPath}`)}${post.author.twitter ? `&via=${post.author.twitter}` : ''}`)
              include partial/twitter.svg
          li
            a.social__facebook(href= `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(`${url}${currentPath}`)}`)
              include partial/facebook.svg

      nav
        ul.pagination
          if post.next
            li.pagination__next
              a(href= urlFor(post.next.link))= post.next.title
          if post.prev
            li.pagination__prev
              a(href= urlFor(post.prev.link))= post.prev.title

    include partial/global-footer
