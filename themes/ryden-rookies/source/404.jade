- var errorMessage = '404 Not Found';
- var title = 'ライデンの新人ブログ';
- var root = '/rookies/';
- var company = 'RYDEN Inc.';

doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title #{errorMessage} - #{title}
    link(rel="stylesheet", href="#{root}css/style.css")
    style.
      .page {
        display: flex;
        flex-direction: column;
        justify-content: center;
        max-width: 40rem;
        min-height: calc(100vh - (4rem + (1rem * 2) + 3.8rem));
        margin-left: auto;
        margin-right: auto;
        padding: 1rem;
        text-align: center;
      }
      .page > *:not(:first-child) {
        margin-top: 0;
      }
    //- link(rel="icon", href="#{root}favicon.ico")
    script(src="#{root}js/fixbug.js", async)

  body
    header.global-header
      h1.logo
        a(href= root)= title

      nav.site-navigation
        ul
          li
            a(href="http://www.ryden.co.jp/", target="_blank")= company

    section.page
      h1= errorMessage
      p あなたがお探しのページは見つかりませんでした。

    footer.global-footer
      p= company
      ul
        li
          a(href="#{root}atom.xml") RSS Feed
