.global-header
  @extend $container
  @extend $container-minimum

  display flex
  align-items center

.logo
  flex-grow 1
  margin-top 0
  margin-bottom 0
  font-size font-size-default

  a
    color inherit
    text-decoration none

.site-navigation
  font-size font-size-small

  ul
    display flex
    margin-top 0
    margin-bottom 0
    padding-left 0
    list-style-type none

  li
    margin-left 1.2em
    text-align right
    white-space nowrap

  a
    color color-dark
    text-decoration none

    &:hover
    &:active
    &:focus
      text-decoration underline
