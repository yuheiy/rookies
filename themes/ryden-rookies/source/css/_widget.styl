.large
  margin-left -1rem
  margin-right -1rem

  @media (min-width: 42rem)
    margin 3rem calc((100vw - 40rem) / -2)

  @media (min-width: 60rem)
    margin-left -10rem
    margin-right -10rem

$drop
  @media (min-width: 60rem)
    m = (1.7 - 1) / 2 rem
    max-width 30rem
    margin-top m
    margin-bottom m

.drop-left
  @extend $drop

  @media (min-width: 60rem)
    float left
    margin-left -10rem
    margin-right 2rem

.drop-right
  @extend $drop

  @media (min-width: 60rem)
    float right
    margin-left 2rem
    margin-right -10rem

.cover
  margin-left -1rem
  margin-right -1rem

  @media (min-width: 42rem)
    margin 3rem "calc((-100vw + %s) / 2)" % width-content

  img
    width 100%
