.post
  margin-top 6rem

  &.is-archive
    margin-bottom 6rem

  &__header
    display flex
    flex-direction column

  &__info
    display flex
    align-items center
    justify-content flex-end
    order -1
    font-size font-size-small

    > time
      margin-left 1em
      color color-dark

  &__author
    position relative
    flex 1
    margin-top 0
    margin-bottom 0
    padding-left 3em
    font-size font-size-small

    > img
      position absolute
      top 0
      left 0
      height calc(100% + .5em)
      margin-top -.25em
      margin-bottom -.25em
      border-radius 50%

  &__content
    @extend $clearfix

    font-family font-stack-content

    > :first-child
      margin-top 0

    h2,
    h3,
    h4,
    h5,
    h6
      margin-top 3em

      + h3,
      + h4,
      + h5,
      + h6
        margin-top 0

    .highlight
      line-height 1.2

  &__footer
    margin-top 6rem

    address
      font-size .9rem
      text-align right

  &__link
    color inherit
    text-decoration none

    .post__header h1
      position relative

      &::before
        content "â†’"
        position absolute
        right calc(100% + (3rem / 2))
        transform translateX(50%)
        opacity 0
        transition opacity .3s
        pointer-events none

    &:hover
    &:active
    &:focus
      .post__header h1::before
        opacity 1

  &__share-buttons
    padding-left 0
    list-style none
    text-align right

    li
      display inline-block
      vertical-align middle

      &:not(:last-child)
        margin-right .8rem
