.post
  margin-top 6rem
  margin-bottom 6rem

.post-header
  display flex
  flex-direction column

  @media (min-width: 30rem)
    flex-direction row
    align-items center

  h1
    margin-top .5em
    margin-bottom 0
    text-align justify

    .is-archive&
      margin-top .25em
      margin-bottom .25em

    @media (min-width: 30rem)
      flex-grow 1
      margin-top .83em
      margin-bottom .83em

      .is-archive&
        margin-top .83em
        margin-bottom .83em

  time
    order -1
    font-size font-size-small
    color color-dark
    text-align right

    .is-archive&
      order 0
      margin-bottom 1rem

    @media (min-width: 30rem)
      order 0
      margin-left 1rem
      white-space nowrap

      .is-archive&
        margin-bottom 0

.post-author
  position relative
  margin-bottom 0
  padding-top .25em
  padding-bottom .25em
  padding-left 2.8em
  font-size font-size-small

  img
    position absolute
    top 0
    left 0
    height 100%
    border-radius 50%

.post-content
  font-family "YuMincho", "Hiragino Mincho ProN", serif
  line-height 1.9
  text-align justify

  > *:first-child
    margin-top 0

  h2
    margin-top 3rem

.post-footer
  margin-top 6rem

  address
    font-size .9rem
    text-align right

.post-link
  color inherit
  text-decoration none

  .post-header h1
    position relative

    &::before
      content "â†’"
      position absolute
      right calc(100% + (3rem / 2))
      bottom 50%
      transform translate(50%,50%)
      opacity 0
      transition opacity .3s
      pointer-events none

  &:hover
    .post-header h1::before
      opacity 1

.share-buttons
  padding-left 0
  list-style none
  text-align right

  li
    display inline-block
    vertical-align middle

    &:not(:last-child)
      margin-right .8rem

.fb-share-button
  top -7px
