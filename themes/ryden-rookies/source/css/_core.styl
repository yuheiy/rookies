// include useragent stylesheet from webkit
article,
aside,
nav,
section
  h1
    font-size 1.5em
    margin-top .83em
    margin-bottom .83em

  article,
  aside,
  nav,
  section
    h1
      font-size 1.17em
      margin-top 1em
      margin-bottom 1em

:root
  line-height 1.7

body
  position relative
  font-family -apple-system, "Segoe UI", sans-serif
  color black
  text-rendering optimizeLegibility
  background-color white

  &::before
    content url("../images/ryden.svg")
    position fixed
    right 50%
    bottom 50%
    z-index -1
    width 100vh
    padding 1rem 1rem 2rem
    transform translate(50%,50%) rotateZ(-90deg) "translateY(calc((-100% - %s) / 2))" % width-content
    box-sizing border-box

img
  max-width 100%

a
  color color-primary

  &:hover
  &:active
    text-decoration none
