- var title = is_post() ? `${page.title} - ${config.title}` : config.title;
- var description = (is_post() ? strip_html(page.excerpt) : config.description).substr(0, 160);
- var author = site.data.authors[page.author];

doctype html
html(lang="ja")
  head(prefix="og: http://ogp.me/ns#")
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width")
    title= title
    meta(name="description", content= description)
    meta(property="og:title", content= is_post() ? page.title : config.title)
    meta(property="og:type", content= is_post() ? 'article' : 'website')
    meta(property="og:image", content= is_post() ? "#{config.url}/images/#{author.image}" : "#{config.url}/images/ogp.png")
    meta(property="og:url", content= url.replace(/\/index\.html$/, '/'))
    meta(property="og:description", content= description)
    meta(property="og:locale", content="ja_JP")
    meta(property="og:site_name", content= config.title)
    meta(property="twitter:card", content="summary")

    link(rel="canonical", href= url_for(page.path).replace(/\/index\.html$/, '/'))
    != feed_tag('atom.xml')
    != css('css/style.css')
    //- link(rel="icon", href= url_for('favicon.ico'), type="image/x-icon")
    script(src= url_for('js/fixbug.js'), async)
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-12088543-11', 'auto');
      ga('send', 'pageview');

  body
    if is_post()
      #fb-root
      script.
        (function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v2.6";
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

    != partial('partial/global-header')

    main.content
      != body

    != partial('partial/global-footer')
